<Window
    x:Class="SlackEmojiCreator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SlackEmojiCreator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    FocusManager.FocusedElement="{Binding ElementName=inputText}"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate x:Key="EmojiLine">
            <StackPanel Orientation="Horizontal">
                <Image Width="20" Source="{Binding Path=BitmapSource}">
                </Image>
                <TextBlock
                    Width="100"
                    Margin="10,0"
                    Text="{Binding Path=Name}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0">
                <Border
                    Width="100"
                    Height="100"
                    Margin="10"
                    HorizontalAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="2">
                    <TextBlock>
                        <Viewbox
                            MaxWidth="100"
                            MaxHeight="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <!--  &#xA;で改行  -->
                            <TextBox
                                x:Name="inputText"
                                AcceptsReturn="True"
                                BorderThickness="0"
                                FontSize="30"
                                GotFocus="inputText_GotFocus"
                                PreviewKeyUp="inputText_PreviewKeyUp"
                                Text="text&#xA;area"
                                TextBlock.LineHeight="30"
                                TextBlock.LineStackingStrategy="BlockLineHeight" />
                        </Viewbox>
                    </TextBlock>
                </Border>


                <StackPanel>
                    <Label Margin="10" Content="Font Family" />
                    <ComboBox
                        x:Name="fontFamilyComboBox"
                        Height="40"
                        Margin="10"
                        SelectionChanged="FontFamilyComboBox_SelectionChanged" />
                </StackPanel>

            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Margin="5"
                    Click="AccountButton_Click"
                    Content="Account" />
                <Button
                    Grid.Column="1"
                    Margin="5"
                    Click="DeleteButton_Click"
                    Content="Delete" />
            </Grid>

        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!--  ViewboxをそのままCaptureするとアスペクト比が変動するので、ダミーのTextBlockで囲む  -->

            <TextBlock
                x:Name="outputTextParent1"
                Grid.Row="0"
                Grid.Column="0">
                <Viewbox>
                    <TextBlock x:Name="outputText1" />
                </Viewbox>
            </TextBlock>


            <TextBlock
                x:Name="outputTextParent2"
                Grid.Row="0"
                Grid.Column="1">
                <Viewbox>
                    <TextBlock x:Name="outputText2" />
                </Viewbox>
            </TextBlock>

            <TextBlock
                x:Name="outputTextParent3"
                Grid.Row="1"
                Grid.Column="0">
                <Viewbox>
                    <TextBlock x:Name="outputText3" />
                </Viewbox>
            </TextBlock>

            <TextBlock
                x:Name="outputTextParent4"
                Grid.Row="1"
                Grid.Column="1">
                <Viewbox>
                    <TextBlock x:Name="outputText4" />
                </Viewbox>
            </TextBlock>


            <Button
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="5"
                Click="AddButton_Clicked"
                Content="Add" />
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <ListView
                x:Name="emojiListView"
                Grid.Row=" 0"
                ItemsSource="{Binding}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn CellTemplate="{StaticResource EmojiLine}">
                            <GridViewColumnHeader Content="Emoji" />
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button
                Grid.Row="1"
                Margin="5"
                Click="ClearButton_Clicked"
                Content="Clear" />

            <Button
                Grid.Row="2"
                Margin="5"
                Click="UploadButton_Clicked"
                Content="Upload" />
        </Grid>

    </Grid>
</Window>
