<Window
    x:Class="SlackEmojiCreator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SlackEmojiCreator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>


            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Top">
                <!--  &#xA;で改行  -->
                <TextBox
                    x:Name="inputText"
                    AcceptsReturn="True"
                    BorderThickness="0"
                    FontSize="100"
                    KeyDown="EmojiText_KeyDown"
                    Text="あ&#xA;　 う"
                    TextBlock.LineHeight="100"
                    TextBlock.LineStackingStrategy="BlockLineHeight" />
            </Viewbox>



            <StackPanel Grid.Row="1">
                <Label Margin="10" Content="Font Family" />
                <ComboBox
                    x:Name="fontFamilyComboBox"
                    Height="40"
                    Margin="10"
                    SelectionChanged="FontFamilyComboBox_SelectionChanged" />
            </StackPanel>

            <Button
                Grid.Row="2"
                Margin="5"
                Click="AccountButton_Click"
                Content="Account" />
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!--  ViewboxをそのままCaptureするとアスペクト比が変動するので、ダミーのTextBlockで囲む  -->
            <TextBlock
                x:Name="outputTextParent1"
                Grid.Row="0"
                Grid.Column="0">
                <Viewbox>
                    <TextBlock x:Name="outputText1" />
                </Viewbox>
            </TextBlock>

            <TextBlock
                x:Name="outputTextParent2"
                Grid.Row="0"
                Grid.Column="1">
                <Viewbox>
                    <TextBlock x:Name="outputText2" />
                </Viewbox>
            </TextBlock>

            <TextBlock
                x:Name="outputTextParent3"
                Grid.Row="1"
                Grid.Column="0">
                <Viewbox>
                    <TextBlock x:Name="outputText3" />
                </Viewbox>
            </TextBlock>

            <TextBlock
                x:Name="outputTextParent4"
                Grid.Row="1"
                Grid.Column="1">
                <Viewbox>
                    <TextBlock x:Name="outputText4" />
                </Viewbox>
            </TextBlock>


            <Button
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="5"
                Click="AddButton_Clicked"
                Content="Add" />
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBox
                x:Name="candidatesText"
                Grid.Row="0"
                Text="files" />

            <Button
                Grid.Row="1"
                Margin="5"
                Click="ClearButton_Clicked"
                Content="Clear" />

            <Button
                Grid.Row="2"
                Margin="5"
                Click="UploadButton_Clicked"
                Content="Upload" />
        </Grid>

    </Grid>
</Window>
