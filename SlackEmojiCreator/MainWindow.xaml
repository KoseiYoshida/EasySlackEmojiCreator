<Window
    x:Class="SlackEmojiCreator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SlackEmojiCreator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            Width="300"
            Height="50"
            Margin="10"
            VerticalAlignment="Top"
            Click="AccountButton_Click"
            Content="Account" />
        <Button
            Width="300"
            Height="50"
            Margin="0,100,0,0"
            VerticalAlignment="Top"
            Click="UploadButton_Click"
            Content="Upload" />
        <Image
            x:Name="textImage"
            Width="250"
            Height="250"
            VerticalAlignment="Bottom" />
        <TextBox
            x:Name="inputTextBox"
            Width="200"
            Height="100"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AllowDrop="True"
            Drop="DropFiles"
            PreviewDragOver="Input_PreviewDragOver"
            Text="Please drag emoji images." />
        <TextBox
            x:Name="outputTextBox"
            Width="200"
            Margin="5"
            HorizontalAlignment="Right" />
        <TextBox
            x:Name="emojiTextBox"
            Width="200"
            Height="30"
            HorizontalAlignment="Left"
            KeyDown="EmojText_KeyDown"
            Text="Enter" />

    </Grid>
</Window>
