<Window
    x:Class="SlackEmojiCreator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SlackEmojiCreator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!--<Viewbox Grid.Row="0">-->
            <TextBox
                x:Name="inputText"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                AcceptsReturn="True"
                FontSize="100"
                KeyDown="EmojiText_KeyDown"
                Text="バイブス"
                TextAlignment="Center"
                TextBlock.LineHeight="100"
                TextBlock.LineStackingStrategy="BlockLineHeight"
                TextWrapping="Wrap" />
            <!--</Viewbox>-->

        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>


            <Image
                x:Name="image1"
                Grid.Row="0"
                Grid.Column="0" />
            <Image
                x:Name="image2"
                Grid.Row="0"
                Grid.Column="1" />
            <Image
                x:Name="image3"
                Grid.Row="1"
                Grid.Column="0" />
            <Image
                x:Name="image4"
                Grid.Row="1"
                Grid.Column="1" />

            <Button
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="5"
                Click="AddButton_Clicked"
                Content="Add" />
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBox
                x:Name="candidatesText"
                Grid.Row="0"
                Text="files" />

            <Button
                Grid.Row="1"
                Margin="5"
                Click="UploadButton_Clicked"
                Content="Upload" />
        </Grid>

        <!--<Button
            Width="300"
