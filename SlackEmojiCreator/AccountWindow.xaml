<Window
    x:Class="SlackEmojiCreator.AccountWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SlackEmojiCreator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AccountWindow"
    Width="800"
    Height="450"
    ContentRendered="Window_ContentRendered"
    mc:Ignorable="d">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <Label Content="WorkspaceName" />
            <TextBox x:Name="workspaceName" Width="300" />
            <Label Content="EmojiListToken" />
            <TextBox x:Name="emojiListToken" Width="300" />
            <!--  EmojiListTokenで、AddもRemoveもできる。  -->
            <!--<Label Content="EmojiAddToken" />
            <TextBox x:Name="emojiAddToken" Width="300" />
            <Label Content="EmojiRemoveToken" />
            <TextBox x:Name="emojiRemoveToken" Width="300" />-->
            <Button
                x:Name="SaveButton"
                Click="SaveButton_Click"
                Content="保存" />
            <TextBlock
                x:Name="resultTextBlock"
                Width="300"
                Margin="5,10" />
        </StackPanel>
    </Grid>
</Window>
